/* styles/specific.qss */
/* Styles for specific, named widgets. */

/* WelcomeWidget */
#WelcomeWidget QLabel {
    color: #dbe0e8;
}
#WelcomeWidget #SubtitleLabel {
    color: #9da5b4;
}
#WelcomeWidget QPushButton {
    background-color: #383e4a;
    border: 1px solid #454c5a;
    border-radius: 5px;
    color: #dbe0e8;
    text-align: center;
}
#WelcomeWidget QPushButton:hover {
    background-color: #4a5263;
    border: 1px solid #528bff;
}
#WelcomeWidget QPushButton:pressed {
    background-color: #528bff;
}

