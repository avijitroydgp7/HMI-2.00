/* Message box styling for dark theme - modern dark with proper popup backgrounds */

QPushButton {
    background-color: #2d2d30;
    color: #cccccc;
    border: 1px solid #3e3e42;
    padding: 8px 16px;
    border-radius: 4px;
    font-weight: bold;
    min-width: 75px;
}

QPushButton:hover {
    background-color: #3e3e42;
    border-color: #4a4a4a;
}

QPushButton:pressed {
    background-color: #094771;
    border-color: #094771;
}

QLabel {
    color: #cccccc;
}

QCheckBox {
    color: #cccccc;
    spacing: 5px;
}

QCheckBox::indicator {
    width: 13px;
    height: 13px;
}

QCheckBox::indicator:unchecked {
    border: 1px solid #3e3e42;
    background-color: #1e1e1e;
}

QCheckBox::indicator:checked {
    border: 1px solid #2d2d30;
    background-color: #2d2d30;
}

/* Ensure proper background for message box container */
QWidget {
    background-color: #252526;
    color: #cccccc;
}
